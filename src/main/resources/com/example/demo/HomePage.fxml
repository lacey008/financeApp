<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.HomePageController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Text style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Finance Manager" />
    
    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 5;">
        <Text style="-fx-font-size: 18px;" text="Summary" />
        <HBox spacing="20">
            <VBox style="-fx-background-color: #e3f2fd; -fx-padding: 15; -fx-background-radius: 5;">
                <Text text="Total Transactions" />
                <Text fx:id="totalTransactionsText" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            </VBox>
            <VBox style="-fx-background-color: #e8f5e9; -fx-padding: 15; -fx-background-radius: 5;">
                <Text text="Total Income" />
                <Text fx:id="totalIncomeText" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            </VBox>
            <VBox style="-fx-background-color: #ffebee; -fx-padding: 15; -fx-background-radius: 5;">
                <Text text="Total Expenses" />
                <Text fx:id="totalExpensesText" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            </VBox>
        </HBox>
    </VBox>

    <Button onAction="#handleViewTransactions" style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-font-size: 14px;" text="View Transactions" />
   <Button layoutX="172.0" layoutY="254.0" onAction="#handleViewCategories" style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-font-size: 14px;" text="View Categories" />
</VBox>
